<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.demo.repository.UserRepository1">
       <select id="findbyId" resultType="com.example.demo.entity.User" parameterType="java.lang.Integer">
                    select * from user where id=#{id}
       </select>
       <insert id="save" parameterType="com.example.demo.entity.User" >
          insert into user(sex,name) values(#{user.sex},#{user.name})
       </insert>
       <update id="update" parameterType="com.example.demo.entity.User">
             update user set name="other" where id=#{user.id}

       </update>
       <delete id="delete" parameterType="java.lang.Integer">
           delete from user where id=#{id}

       </delete>


</mapper>